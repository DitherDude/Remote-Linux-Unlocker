<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/defaultColorPrimary</item>
        <item name="colorPrimaryDark">@color/defaultColorPrimaryDark</item>
        <item name="colorAccent">@color/defaultColorAccent</item>
    </style>

    <style name="DangerButton">
        <item name="colorButtonNormal">@color/dangerColorAccent</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="SuccessButton">
        <item name="colorButtonNormal">@color/successColorAccent</item>
        <item name="android:textColor">#535353</item>
    </style>
    <style name="WarningButton">
        <item name="colorButtonNormal">@color/warningColorAccent</item>
        <item name="android:textColor">#434343</item>
    </style>

</resources>
